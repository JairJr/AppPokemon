<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPokemon.Views.SearchPokemon"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Digite o nome do pokemon:" />
            <Entry MaxLength="30" Text="{Binding Pokemon}"/>
            <Button Text="Pesquisar" Command="{Binding SearchMyPokemon}"/>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>